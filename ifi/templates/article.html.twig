{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Blog IFI{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {{ include('style.html.twig') }}
</head>
<body>
{{ include('nav.html.twig') }}
<main role="main" class="container">
    {% block body %}

        {% if article is null %}
            <p>Post don't exist !</p>
        {% else %}
            {% set page = app.request.query.get('page', 1) %}
            {% include '::pagination.html.twig' with {'page': page, 'nbPages': nbPages, 'objectName': 'article'} %}


            <div class="jumbotron">
                <h1>{{ article.getTitle() }}</h1>
                <h3>{{ article.getSubtitle() }}</h3>
                <p>Publi√© le : {{ article.getCreatedAt() | date("d/m/Y") }}</p>
                <p class="lead">{{ article.getCorpus() }}</p>
            </div>


        {% endif %}
    {% endblock %}

    <div class="container">
        <div class="row">
            <div class="col-sm">
                {% if prev is not null %}
                    <a class="btn btn-secondary btn-sm" href="{{ path('getArticle', {'id' : prev.getId() }) }}"
                       role="button">< Previous
                        Post</a>
                {% endif %}
            </div>
            <div class="col-sm">
                <a class="btn btn-sm btn-primary" href="{{ path('homepage') }}" role="button">Go to Home</a>
            </div>
            <div class="col-sm">
                {% if next is not null %}
                    <a class="btn btn-secondary btn-sm" href="{{ path('getArticle', {'id' : next.getId() }) }}"
                       role="button">Next
                        Post ></a>
                {% endif %}

            </div>
        </div>
    </div>
</main>

{{ include('footer.html.twig') }}
</body>
</html>
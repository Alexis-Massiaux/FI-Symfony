{% extends 'base.html.twig' %}


{% block body %}
    <br>
    <div class="text-center">
    <h1>Welcome to Gautier & Henri's blog</h1>

    <h3> There is {{ posts|length }}
        {% if posts|length > 1 %} posts {% else %} post {% endif %}
         on the blog</h3>
    </div>

    <div class="row">
    {% for post in posts %}
            <div class="col-3">
                <div class="card" style="margin-top:20px">
                    <img class="card-img-top" src="https://loremflickr.com/300/300" alt="..." style="height: 175px;width:auto;">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.subtitle }}</p>
                        <a href="/{{ post.id }}" >Read</a>
                    </div>
                </div>
            </div>
    {% endfor %}
    </div>
{% endblock %}
<div class="card ">
    <div class="card-header">
        <b>{{ article.title }}</b> - <i>Le {{ article.createdAt|date('Y-m-d Ã  H:i') }}</i>
    </div>
    <div class="card-body">
        <h5 class="card-title">{{ article.subtitle }}</h5>
        <p class="card-text">{{ article.corpus|truncate(30) }}</p>
        <a href="{{ path('article_show', {'id':  article.id }) }}" class="btn btn-dark">Lire cet article</a>
    </div>
    <div class="card-footer text-muted">
        <span class="oi oi-tag"></span> Tags:&nbsp;
        {% for tag in article.tags %}
            <a href="{{ path('article_list_filtered',{'nameTag': tag.name }) }}"><span
                        class="badge badge-secondary">{{ tag.name }}</span></a>&nbsp;
        {% endfor %}
    </div>
</div>
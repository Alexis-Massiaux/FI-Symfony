{% extends 'base.html.twig' %}

{% block title %}Create a post{% endblock %}

{% block body %}
    <form action="/blogposts" method="post">
        <div class="form-group">
            <label for="postTitle">Post title</label>
            <input type="text" class="form-control" id="postTitle" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="postSubTitle">Post subtitle</label>
            <input type="text" class="form-control" id="postSubTitle" placeholder="Enter subtitle">
        </div>
        <div class="form-group">
            <label for="postCorpus">Post corpus</label>
            <textarea class="form-control" id="postCorpus" rows="10" placeholder="Enter corpus"></textarea>
        </div>
        <button type="submit" class="btn btn-primary float-right">Post</button>
    </form>
    {{ form(form) }}
    <h2>{{ etat }}</h2>
{% endblock %}